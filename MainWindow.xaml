<Window x:Class="BudgetApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Budget App" Height="600" Width="500" Background="#f7f7f7">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <!-- Monthly Income -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Monthly Income:" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBox x:Name="IncomeTextBox" Width="150" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- PDF Title -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="PDF Title:" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBox x:Name="PdfTitleTextBox" Width="200" Margin="36,0,0,0" Text="My Budget Report"/>
            </StackPanel>
        </StackPanel>



        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="ExpenseNameTextBox" Width="150" Margin="0,0,10,0" Text="Expense Name"
         Foreground="Gray" GotFocus="RemovePlaceholderText" LostFocus="AddPlaceholderText"/>

            <TextBox x:Name="ExpenseAmountTextBox" Width="100" Margin="0,0,10,0" Text="Amount"
         Foreground="Gray" GotFocus="RemovePlaceholderText" LostFocus="AddPlaceholderText"/>

            <Button Content="Add Expense" Click="AddExpense_Click" Width="120"/>
        </StackPanel>

        <ListView x:Name="ExpensesList" Grid.Row="2" Margin="0,0,0,10" Height="300">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Amount" Width="100" DisplayMemberBinding="{Binding Amount}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="3" Orientation="Vertical">
            <Grid Grid.IsSharedSizeScope="True" Margin="0,0,0,10" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Buttons" Width="Auto"/>
                    <ColumnDefinition SharedSizeGroup="Buttons" Width="Auto"/>
                    <ColumnDefinition SharedSizeGroup="Buttons" Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Remove Selected" Click="RemoveExpense_Click" Margin="5"/>
                <Button Grid.Column="1" Content="Export to CSV" Click="ExportToCsv_Click" Margin="5"/>
                <Button Grid.Column="2" Content="Export to PDF" Click="ExportToPdf_Click" Margin="5"/>
            </Grid>

            <TextBlock x:Name="TotalExpensesText" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock x:Name="RemainingText" FontSize="16" FontWeight="Bold"/>
        </StackPanel>

    </Grid>
</Window>
